<view class="container">
  <textarea class="content" placeholder="分享新鲜事......"
    bindinput="onInput" maxlength="280" auto-focus
    bindfocus="onFocus" bindblur="onBlur"
  ></textarea>
  <view class="image-list">
  <!-- 显示图片-->
  <block wx:for="{{images}}" wx:key="*this">
    <view class="image-wrap">     
      <image class="image" src="{{item}}" mode="aspectFill" bindtap="onPreviewImg"
         data-imgsrc="{{item}}"></image>
        <i class="iconfont icon-shanchu1" bindtap="onDelImg" data-index="{{index}}"></i>
    </view>
  </block>
  <!-- 选择图片 -->
    <view class="image-wrap selectphoto" bindtap="onChooseImg" hidden="{{!selectPhoto}}">
        <i class="iconfont icon-jiahao"></i> 
    </view>
  </view>
</view>

<view class="footer" style="bottom:{{footerBottom}}px">
  <text class="words-num">{{wordsNum}}</text>
  <button class="send-btn" bindtap="send">发布</button>
</view>